<dx:ThemedWindow x:Class="IVM.Studio.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IVM.Studio"
        mc:Ignorable="d"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
        xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        WindowStartupLocation="CenterScreen"
        Title="IVM Studio" Height="900" Width="1520"
        TitleAlignment="Center" Icon="{dx:DXImage SvgImages/Icon Builder/Actions_Image.svg}">
    
    <dxdo:DockLayoutManager ViewStyle="Default">
        <dxdo:LayoutGroup Caption="LayoutRoot" Orientation="Vertical">
            <dxdo:LayoutPanel ShowCaption="False" ItemHeight="24" ShowBorder="False">
                <dxb:MainMenuControl FontSize="14">
                    <dxb:BarSubItem Content=" OpenFolder " Command="{Binding OpenFolderCommand}"/>
                    <dxb:BarSubItem Content=" Refresh " Command="{Binding RefreshCommand}"/>
                    <dxb:BarSubItem Content=" Captrue "/>
                    <dxb:BarSubItem Content=" Export "/>
                    <dxb:BarSubItem Content=" 3D "/>
                </dxb:MainMenuControl>
            </dxdo:LayoutPanel>

            <dxdo:LayoutGroup Caption="LayoutContent">
                <dxdo:LayoutGroup Caption="LeftGroup" Orientation="Vertical" ItemWidth="300">
                    <dxdo:LayoutPanel Caption="Information" AllowClose="False" AllowHide="False">
                        <Border BorderBrush="#424242" BorderThickness="0 1 0 0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <dxg:GridControl SelectionMode="Row" ShowBorder="True" RenderOptions.EdgeMode="Aliased" Margin="5">
                                    <dxg:GridControl.View>
                                        <dxg:TableView AutoWidth="True"/>
                                    </dxg:GridControl.View>

                                    <dxg:GridControl.Columns>
                                        <dxg:GridColumn Header="#" FieldName=""/>
                                        <dxg:GridColumn Header="Category" FieldName="Category"/>
                                        <dxg:GridColumn Header="Filename" FieldName="Filename"/>
                                    </dxg:GridControl.Columns>
                                </dxg:GridControl>

                                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5 10">
                                    <Button Content="&lt;&lt; Previous" Width="90"/>
                                    <Button Content="Next >>" Width="90" Margin="5 0 0 0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </dxdo:LayoutPanel>

                    <dxdo:LayoutPanel Caption="Imaging Condition" AllowClose="False" AllowHide="False">
                        <Border BorderBrush="#424242" BorderThickness="0 1 0 0">
                            <dxg:GridControl SelectionMode="Row" ShowBorder="True" RenderOptions.EdgeMode="Aliased" Margin="5">
                                <dxg:GridControl.View>
                                    <dxg:TableView AutoWidth="True"/>
                                </dxg:GridControl.View>

                                <dxg:GridControl.Bands>
                                    <dxg:GridControlBand Header="">
                                        <dxg:GridColumn FieldName="Seq" Header="#" ReadOnly="True"/>
                                    </dxg:GridControlBand>
                                    <dxg:GridControlBand Header="Laser Power(%)">
                                        <dxg:GridColumn FieldName="Seq" Header="405" ReadOnly="True"/>
                                        <dxg:GridColumn FieldName="Seq" Header="488" ReadOnly="True"/>
                                        <dxg:GridColumn FieldName="Seq" Header="561" ReadOnly="True"/>
                                        <dxg:GridColumn FieldName="Seq" Header="640" ReadOnly="True"/>
                                    </dxg:GridControlBand>
                                    <dxg:GridControlBand Header="Detector Gain">
                                        <dxg:GridColumn FieldName="Seq" Header="DAPI" ReadOnly="True"/>
                                        <dxg:GridColumn FieldName="Seq" Header="GFP" ReadOnly="True"/>
                                        <dxg:GridColumn FieldName="Seq" Header="RFP" ReadOnly="True"/>
                                        <dxg:GridColumn FieldName="Seq" Header="NIR" ReadOnly="True"/>
                                    </dxg:GridControlBand>
                                </dxg:GridControl.Bands>
                            </dxg:GridControl>
                        </Border>
                    </dxdo:LayoutPanel>
                </dxdo:LayoutGroup>

                <dxdo:LayoutGroup Caption="RightGroup" Orientation="Vertical">
                    <dxdo:LayoutGroup ItemHeight="auto">
                        <!--<dxdo:LayoutPanel ShowCaption="False" AllowClose="False">
                        <ContentControl prism:RegionManager.RegionName="ImageControlPage" />
                    </dxdo:LayoutPanel>-->

                        <dxdo:LayoutPanel Caption="Image Control" AllowClose="False" AllowHide="False" ItemWidth="auto">
                            <Border BorderBrush="#424242" BorderThickness="0 1 0 0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Margin="10">
                                        <TextBlock Text="Rotation" FontWeight="Bold"/>

                                        <StackPanel Margin="0 10" Orientation="Horizontal">
                                            <dx:SimpleButton Style="{StaticResource IconButton}" Glyph="../Resources/Images/rotate_right.png" ToolTip="Rotation Right"/>
                                            <dx:SimpleButton Style="{StaticResource IconButton}" Glyph="../Resources/Images/rotate_left.png" ToolTip="Rotation Left" Margin="8 0 0 0"/>
                                            <dx:SimpleButton Style="{StaticResource IconButton}" Glyph="../Resources/Images/reflect_horizontal_left.png" ToolTip="Reflect Horizontal Left" Margin="8 0 0 0"/>
                                            <dx:SimpleButton Style="{StaticResource IconButton}" Glyph="../Resources/Images/reflect_horizontal_right.png" ToolTip="Reflect Horizontal Right" Margin="8 0 0 0"/>
                                            <dx:SimpleButton Style="{StaticResource IconButton}" Glyph="../Resources/Images/reflect_vertical_top.png" ToolTip="Reflect Vertical Top" Margin="8 0 0 0"/>
                                            <dx:SimpleButton Style="{StaticResource IconButton}" Glyph="../Resources/Images/reflect_vertical_bottom.png" ToolTip="Reflect Vertical Bottom" Margin="8 0 0 0"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 5">
                                            <Button Content="Undo"/>
                                            <Button Content="Eodo" Margin="5 0 0 0"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <ContentControl Template="{StaticResource VerticalLine}" Grid.Column="1" Margin="10 15" />

                                    <StackPanel Margin="10" Grid.Column="2">
                                        <TextBlock Text="Crop" FontWeight="Bold"/>

                                        <StackPanel Margin="0 10" Orientation="Horizontal">
                                            <dx:SimpleButton Style="{StaticResource IconButton}" ToolTip="Crop Rectangle" Padding="0">
                                                <material:PackIcon Kind="CropFree" Width="32" Height="32" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </dx:SimpleButton>
                                            <dx:SimpleButton Style="{StaticResource IconButton}" Glyph="../Resources/Images/crop_circle.png" ToolTip="Crop Circle" Margin="8 0 0 0"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 5">
                                            <Button Content="Crop"/>
                                            <Button Content="Undo" Margin="5 0 0 0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </dxdo:LayoutPanel>

                        <dxdo:LayoutPanel Caption="Annotation" AllowClose="False" AllowHide="False" ItemWidth="auto">
                            <Border BorderBrush="#424242" BorderThickness="0 1 0 0">
                                <StackPanel Margin="5 0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Margin="5 10 5 5" Grid.Column="0">
                                            <TextBlock Text="Pen" FontWeight="Bold"/>

                                            <StackPanel Margin="0 15 0 10" Orientation="Horizontal" >
                                                <dxe:PopupColorEdit ColumnCount="10" Color="Yellow" DefaultColor="Yellow" ShowMoreColorsButton="True" AllowDefaultButton="False"
                                                    MoreColorsButtonContent="Color picker" ChipSize="Medium" DisplayMode="Color"/>
                                                <TextBlock Text="Thickness :" VerticalAlignment="Center" Margin="10 0 5 0"/>
                                                <dxe:ComboBoxEdit ItemsSource="{Binding PenThicknessList}" EditValue="{Binding SelectedPenThickness}" Width="35" IsTextEditable="False"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <ContentControl Template="{StaticResource VerticalLine}" Grid.Column="1" Margin="10 10" />

                                        <StackPanel Margin="5 10 5 5" Grid.Column="2">
                                            <TextBlock Text="Eraser" FontWeight="Bold"/>

                                            <StackPanel Margin="0 15 0 10" Orientation="Horizontal">
                                                <TextBlock Text="Size :" VerticalAlignment="Center" Margin="0 0 5 0"/>
                                                <dxe:ComboBoxEdit ItemsSource="{Binding EraserSizeList}" EditValue="{Binding SelectedEraserSize}" Width="40" IsTextEditable="False"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <ContentControl Template="{StaticResource VerticalLine}" Grid.Column="3" Margin="10 10" />

                                        <StackPanel Margin="5 10 5 5" Grid.Column="4">
                                            <TextBlock Text="Text" FontWeight="Bold"/>

                                            <StackPanel Margin="0 15 0 10" Orientation="Horizontal">
                                                <dxe:PopupColorEdit ColumnCount="10" Color="White" DefaultColor="White" ShowMoreColorsButton="True" AllowDefaultButton="False"
                                                    MoreColorsButtonContent="Color picker" ChipSize="Medium" DisplayMode="Color"/>
                                                <TextBlock Text="Font :" VerticalAlignment="Center" Margin="10 0 5 0"/>
                                                <dxe:ComboBoxEdit ItemsSource="{Binding FontSizeList}" EditValue="{Binding SelectedFontSize}" ShowSizeGrip="True" IsTextEditable="False" Margin="0 0 5 0"/>
                                                <dxe:ComboBoxEdit ItemsSource="{Binding FontItemList}" EditValue="{Binding SelectedFontItem}" DisplayMember="Name" ShowSizeGrip="True" IsTextEditable="False"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                                        <Button Content="Clear"/>
                                        <Button Content="Undo" Margin="5 0 0 0"/>
                                        <Button Content="Redo" Margin="5 0 0 0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </dxdo:LayoutPanel>

                        <dxdo:LayoutPanel Caption="Scale Bar" AllowClose="False" AllowHide="False">
                            <Border BorderBrush="#424242" BorderThickness="0 1 0 0">
                                <StackPanel Margin="10 10 10 5">
                                    <StackPanel Margin="0 0 0 5" Orientation="Horizontal">
                                        <TextBlock Text="Image" VerticalAlignment="Center" Width="50"/>

                                        <dxe:ComboBoxEdit ShowSizeGrip="True" IsTextEditable="False" Margin="0 0 5 0" SelectedIndex="0">
                                            <dxe:ComboBoxEditItem>100</dxe:ComboBoxEditItem>
                                        </dxe:ComboBoxEdit>
                                        <dxe:ComboBoxEdit ShowSizeGrip="True" IsTextEditable="False" Margin="0 0 5 0" SelectedIndex="0">
                                            <dxe:ComboBoxEditItem>100 µm</dxe:ComboBoxEditItem>
                                        </dxe:ComboBoxEdit>
                                        <dxe:ComboBoxEdit ShowSizeGrip="True" IsTextEditable="False" Margin="0 0 5 0" SelectedIndex="0">
                                            <dxe:ComboBoxEditItem>Times New Roman</dxe:ComboBoxEditItem>
                                        </dxe:ComboBoxEdit>
                                    </StackPanel>

                                    <StackPanel Margin="0 5 0 5" Orientation="Horizontal">
                                        <TextBlock Text="Mosaic" VerticalAlignment="Center" Width="50"/>

                                        <dxe:ComboBoxEdit ShowSizeGrip="True" IsTextEditable="False" Margin="0 0 5 0" SelectedIndex="0">
                                            <dxe:ComboBoxEditItem>100</dxe:ComboBoxEditItem>
                                        </dxe:ComboBoxEdit>
                                        <dxe:ComboBoxEdit ShowSizeGrip="True" IsTextEditable="False" Margin="0 0 5 0" SelectedIndex="0">
                                            <dxe:ComboBoxEditItem>100 µm</dxe:ComboBoxEditItem>
                                        </dxe:ComboBoxEdit>
                                        <dxe:ComboBoxEdit ShowSizeGrip="True" IsTextEditable="False" Margin="0 0 5 0" SelectedIndex="0">
                                            <dxe:ComboBoxEditItem>Times New Roman</dxe:ComboBoxEditItem>
                                        </dxe:ComboBoxEdit>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5 15 5 5">
                                        <Button Content="Preview"/>
                                        <Button Content="Apply" Margin="5 0 0 0"/>
                                        <Button Content="Undo" Margin="5 0 0 0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </dxdo:LayoutPanel>
                    </dxdo:LayoutGroup>

                    <dxdo:LayoutGroup>
                        <dxdo:LayoutPanel Caption="Image Adjustment" AllowClose="False" AllowHide="False">
                            <Border BorderBrush="#424242" BorderThickness="0 1 0 0">
                                <StackPanel Margin="10">
                                    <StackPanel Orientation="Horizontal">
                                        <dx:SimpleButton Style="{StaticResource GrayGradientButton}" ButtonKind="Toggle" IsChecked="{Binding AllChecked}" Content="ALL" Height="40" Width="75"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                                        <dx:SimpleButton Style="{StaticResource GrayGradientButton}" ButtonKind="Toggle" Height="40" Width="75">
                                            <dx:SimpleButton.Content>
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock TextAlignment="Center" Text="DAPI"/>
                                                    <TextBlock TextAlignment="Center" Text="(425-465)" Margin="0 -2 0 0"/>
                                                </StackPanel>
                                            </dx:SimpleButton.Content>
                                        </dx:SimpleButton>

                                        <dxe:CheckEdit Margin="10 0 0 0"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                                        <dx:SimpleButton Style="{StaticResource GreenGradientButton}" ButtonKind="Toggle" Height="40" Width="75">
                                            <dx:SimpleButton.Content>
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock TextAlignment="Center" Text="GFP"/>
                                                    <TextBlock TextAlignment="Center" Text="(500-550)" Margin="0 -2 0 0"/>
                                                </StackPanel>
                                            </dx:SimpleButton.Content>
                                        </dx:SimpleButton>

                                        <dxe:CheckEdit Margin="10 0 0 0"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                                        <dx:SimpleButton Style="{StaticResource RedGradientButton}" Height="40" Width="75">
                                            <dx:SimpleButton.Content>
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock TextAlignment="Center" Text="RFP"/>
                                                    <TextBlock TextAlignment="Center" Text="(582-618)" Margin="0 -2 0 0"/>
                                                </StackPanel>
                                            </dx:SimpleButton.Content>
                                        </dx:SimpleButton>

                                        <dxe:CheckEdit Margin="10 0 0 0"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                                        <dx:SimpleButton Style="{StaticResource BlueGradientButton}" ButtonKind="Toggle" Height="40" Width="75">
                                            <dx:SimpleButton.Content>
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock TextAlignment="Center" Text="NIR"/>
                                                    <TextBlock TextAlignment="Center" Text="(663-733)" Margin="0 -2 0 0"/>
                                                </StackPanel>
                                            </dx:SimpleButton.Content>
                                        </dx:SimpleButton>

                                        <dxe:CheckEdit Margin="10 0 0 0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </dxdo:LayoutPanel>

                        <dxdo:LayoutPanel Caption="Image Magnification" AllowClose="False" AllowHide="False" ItemWidth="300">
                            <Border BorderBrush="#424242" BorderThickness="0 1 0 0">
                                <Grid Margin="20">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <dxe:TrackBarEdit TickPlacement="None" Minimum="0" Maximum="200" SmallStep="10">
                                            <dxe:TrackBarEdit.StyleSettings>
                                                <dxe:TrackBarZoomStyleSettings />
                                            </dxe:TrackBarEdit.StyleSettings>
                                        </dxe:TrackBarEdit>

                                        <Button Grid.Column="1" Content="Default" HorizontalAlignment="Right" Margin="10 0 0 0" VerticalAlignment="Center"/>
                                    </Grid>

                                    <Border Grid.Row="1" Background="Black" Margin="0 15 0 0">
                                        <Image  Source="{Binding DisplayImage}" RenderOptions.BitmapScalingMode="HighQuality"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </dxdo:LayoutPanel>
                    </dxdo:LayoutGroup>

                    <dxdo:LayoutGroup ItemHeight="200">
                        <dxdo:LayoutPanel Caption="Display Adjustment" AllowClose="False" AllowHide="False">
                            <Border BorderBrush="#424242" BorderThickness="0 1 0 0">
                                <StackPanel Margin="15">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Z-Stack" VerticalAlignment="Center" Width="110"/>

                                        <dxe:TrackBarEdit TickItemDisplayMode="TickAndText" HorizontalAlignment="Stretch"
                                                      Minimum="0" Maximum="100" Width="400">
                                            <dxe:TrackBarEdit.StyleSettings>
                                                <dxe:TrackBarStyleSettings/>
                                            </dxe:TrackBarEdit.StyleSettings>
                                        </dxe:TrackBarEdit>
                                    </StackPanel>

                                    <StackPanel Margin="0 12 0 0" Orientation="Horizontal">
                                        <TextBlock Text="Multi-Spot" VerticalAlignment="Center" Width="110"/>

                                        <Slider Minimum="0" Maximum="10" IsSnapToTickEnabled="True" Width="400" Style="{StaticResource CustomSliderStyle}"/>
                                    </StackPanel>

                                    <StackPanel Margin="0 12 0 0" Orientation="Horizontal">
                                        <TextBlock Text="Time-lapse" VerticalAlignment="Center" Width="110"/>
                                    </StackPanel>

                                    <StackPanel Margin="0 12 0 0" Orientation="Horizontal">
                                        <TextBlock Text="Mosaic" VerticalAlignment="Center" Width="110"/>
                                    </StackPanel>

                                    <StackPanel Margin="0 12 0 0" Orientation="Horizontal">
                                        <TextBlock Text="Sildeshow FPS" VerticalAlignment="Center" Width="110"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </dxdo:LayoutPanel>

                        <dxdo:LayoutPanel Caption="Processing" AllowClose="False" AllowHide="False" ItemWidth="500">
                            <Border BorderBrush="#424242" BorderThickness="0 1 0 0">
                                <StackPanel Margin="15">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Z-Stack Projection" VerticalAlignment="Center" Width="130"/>

                                        <dxe:ComboBoxEdit ShowSizeGrip="True" IsTextEditable="False" SelectedIndex="0">
                                            <dxe:ComboBoxEditItem Content="Maximal Intensity"/>
                                        </dxe:ComboBoxEdit>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0 40 0 10">
                                        <TextBlock Text="Auto-Mosaic" VerticalAlignment="Center" Width="130"/>

                                        <TextBlock Text="Edge Crop" VerticalAlignment="Center"/>
                                        <dxe:ComboBoxEdit ShowSizeGrip="True" IsTextEditable="False" SelectedIndex="0" Margin="5 0 0 0">
                                            <dxe:ComboBoxEditItem Content="Minimum"/>
                                        </dxe:ComboBoxEdit>

                                        <TextBlock Text="Overlap (%)" VerticalAlignment="Center" Margin="15 0 0 0"/>
                                        <dxe:ComboBoxEdit ShowSizeGrip="True" IsTextEditable="False" SelectedIndex="0" Margin="5 0 0 0">
                                            <dxe:ComboBoxEditItem Content="35"/>
                                        </dxe:ComboBoxEdit>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0 5 0 10">
                                        <TextBlock Text="Registration Ref. CH" VerticalAlignment="Center" Width="130"/>

                                        <dxe:ComboBoxEdit ShowSizeGrip="True" IsTextEditable="False" SelectedIndex="0">
                                            <dxe:ComboBoxEditItem Content="NIR (663-733)"/>
                                        </dxe:ComboBoxEdit>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </dxdo:LayoutPanel>
                    </dxdo:LayoutGroup>

                    <dxdo:LayoutPanel Caption="Image Sequence" AllowClose="False" AllowHide="False" ItemHeight="190">
                        <Border BorderBrush="#424242" BorderThickness="0 1 0 0">
                            <Grid x:Name="ImageSequenceGroup" Margin="0 0 0 0">
                                <Grid.RowDefinitions/>
                                <Grid.ColumnDefinitions/>
                            </Grid>
                        </Border>
                    </dxdo:LayoutPanel>
                </dxdo:LayoutGroup>
            </dxdo:LayoutGroup>
        </dxdo:LayoutGroup>
    </dxdo:DockLayoutManager>
</dx:ThemedWindow>
