<dx:ThemedWindow x:Class="IVM.Studio.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IVM.Studio"
        mc:Ignorable="d"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
        xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:util="clr-namespace:IVM.Studio.Utils"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        WindowStartupLocation="CenterScreen"
        Title="IVM Studio" Height="1040" Width="1680" Top="0"
        TitleAlignment="Center" Icon="{dx:DXImage SvgImages/Icon Builder/Actions_Image.svg}">

    <Window.Resources>
        <util:IndexFromOneConverter x:Key="IndexFromOneConverter"/>
        <dx:Format x:Key="valueFormat" Foreground="Gray" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <dxdo:LayoutPanel Grid.Row="0" ShowCaption="False" ItemHeight="24" ShowBorder="False">
            <dxb:MainMenuControl FontSize="14">
                <dxb:BarSubItem Content=" File " Command="{Binding OpenFolderCommand}"/>
                <dxb:BarSubItem Content=" Edit " Command="{Binding RefreshCommand}"/>
                <dxb:BarSubItem Content=" View "/>
            </dxb:MainMenuControl>
        </dxdo:LayoutPanel>

        <dxdo:DockLayoutManager Grid.Row="1" ViewStyle="Default" Background="#1F201D">
            <dxdo:LayoutGroup Caption="LayoutContent">
                <dxdo:LayoutGroup Caption="LeftGroup" Orientation="Vertical" ItemWidth="580">
                    <dxdo:DocumentGroup ClosePageButtonShowMode="NoWhere">
                        <dxdo:DocumentPanel Caption="Image Data">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <dxg:GridControl ItemsSource="{Binding SlideInfoCollection}" CurrentItem="{Binding SelectedSlideInfo}" SelectedItem="{Binding SelectedSlideInfo}" SelectionMode="Row" 
                                                 ShowBorder="True" RenderOptions.EdgeMode="Aliased" Margin="10" Grid.ColumnSpan="2">
                                    <dxg:GridControl.View>
                                        <dxg:TableView AllowScrollToFocusedRow="True" AllowSorting="False" AllowPerPixelScrolling="True" AllowScrollAnimation="True" PreviewKeyDown="OnTableViewPreviewKeyDown"/>
                                    </dxg:GridControl.View>

                                    <dxg:GridControl.Columns>
                                        <dxg:GridColumn Width="50" Header="#">
                                            <dxg:GridColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding RowData.RowHandle.Value, Converter={StaticResource IndexFromOneConverter}}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </DataTemplate>
                                            </dxg:GridColumn.CellTemplate>
                                        </dxg:GridColumn>
                                        <dxg:GridColumn Header="Category" Width="*" FieldName="Category"/>
                                        <dxg:GridColumn Header="Filename" Width="2*" FieldName="Name"/>
                                    </dxg:GridControl.Columns>
                                </dxg:GridControl>

                                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,10" Grid.Column="1">
                                    <Button Content="Previous" Width="80" Command="{Binding PreviousSlideCommand}"/>
                                    <Button Content="Next" Width="80" Margin="8 0 0 0" Command="{Binding NextSlideCommand}"/>
                                </StackPanel>
                            </Grid>
                        </dxdo:DocumentPanel>

                        <dxdo:DocumentPanel Caption="Imaging Parameter">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Margin="10 0">
                                    <StackPanel Margin="0 10 0 10" Orientation="Horizontal">
                                        <TextBlock Text="Filename : " FontWeight="Bold" FontSize="13"/>
                                        <TextBlock Text="{Binding SelectedFilename}" Margin="5 0" FontSize="13" Foreground="Gray"/>
                                    </StackPanel>
                                </StackPanel>

                                <dxg:GridControl Grid.Row="1" ItemsSource="{Binding MetadataCollection}" ShowBorder="True" RenderOptions.EdgeMode="Aliased" Margin="10 0 10 10">
                                    <dxg:GridControl.View>
                                        <dxg:TableView NavigationStyle="None" AutoWidth="True" ShowColumnHeaders="False" UseLegacyFilterPanel="False">
                                            <dxg:TableView.FormatConditions>
                                                <dxg:FormatCondition FieldName="Value1" Expression="true" Format="{StaticResource valueFormat}" />
                                                <dxg:FormatCondition FieldName="Value2" Expression="true" Format="{StaticResource valueFormat}" />
                                                <dxg:FormatCondition FieldName="Value3" Expression="true" Format="{StaticResource valueFormat}" />
                                                <dxg:FormatCondition FieldName="Value4" Expression="true" Format="{StaticResource valueFormat}" />
                                            </dxg:TableView.FormatConditions>
                                        </dxg:TableView>
                                    </dxg:GridControl.View>

                                    <dxg:GridControl.Bands>
                                        <dxg:GridControlBand Header="Name" HorizontalHeaderContentAlignment="Center">
                                            <dxg:GridColumn FieldName="Group" Width="90"/>
                                        </dxg:GridControlBand>
                                        <dxg:GridControlBand Header="Values" HorizontalHeaderContentAlignment="Center">
                                            <dxg:GridColumn FieldName="Name1"/>
                                            <dxg:GridColumn FieldName="Value1"/>
                                            <dxg:GridColumn FieldName="Name2"/>
                                            <dxg:GridColumn FieldName="Value2"/>
                                            <dxg:GridColumn FieldName="Name3"/>
                                            <dxg:GridColumn FieldName="Value3"/>
                                            <dxg:GridColumn FieldName="Name4"/>
                                            <dxg:GridColumn FieldName="Value4"/>
                                        </dxg:GridControlBand>
                                    </dxg:GridControl.Bands>
                                </dxg:GridControl>

                                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10 0 10 10">
                                    <Button Content="Previous" Width="80" Command="{Binding PreviousSlideCommand}"/>
                                    <Button Content="Next" Width="80" Margin="8 0 0 0" Command="{Binding NextSlideCommand}"/>
                                </StackPanel>
                            </Grid>
                        </dxdo:DocumentPanel>
                    </dxdo:DocumentGroup>

                    <dxdo:DocumentGroup ClosePageButtonShowMode="NoWhere" ItemHeight="340">
                        <dxdo:DocumentPanel Caption="Image Adjustment">
                            <ContentControl prism:RegionManager.RegionName="ImageAdjustmentPanel"/>
                        </dxdo:DocumentPanel>

                        <dxdo:DocumentPanel Caption="Annotation">
                            <ContentControl prism:RegionManager.RegionName="AnnotationPanel"/>
                        </dxdo:DocumentPanel>

                        <dxdo:DocumentPanel Caption="Colormap">
                            <ContentControl prism:RegionManager.RegionName="ColormapPanel"/>
                        </dxdo:DocumentPanel>
                    </dxdo:DocumentGroup>

                    <dxdo:DocumentGroup ClosePageButtonShowMode="NoWhere">
                        <dxdo:DocumentPanel Caption="Display Control">
                            <Grid Margin="15 10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="110"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Z-Stack -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Z-Stack" VerticalAlignment="Center" Style="{StaticResource TitleText}"/>

                                    <dx:SimpleButton Grid.Row="0" Grid.Column="1" Style="{StaticResource PlayAndPauseButton}" Command="{Binding PlaySlideShowCommand}" CommandParameter="ZStack"
                                                     IsChecked="{Binding ZSSliderPlaying, Mode=OneWay}" IsEnabled="{Binding ZSSliderEnabled}"/>

                                    <Slider Grid.Row="0" Grid.Column="2" Margin="10 0" TickFrequency="1" IsSnapToTickEnabled="True" Style="{StaticResource CustomSliderStyle}" IsEnabled="{Binding ZSSliderEnabled}"
                                            Minimum="{Binding ZSSliderMinimum}" Maximum="{Binding ZSSliderMaximum}" Value="{Binding ZSSliderValue, Delay=500}"/>

                                    <Border Grid.Row="0" Grid.Column="3" Style="{StaticResource GeneralBorder}" VerticalAlignment="Stretch">
                                        <TextBlock Style="{StaticResource GeneralTextBlock}" Text="{Binding ZSSliderText}"/>
                                    </Border>

                                    <!-- Mosaic -->
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Mosaic" VerticalAlignment="Center" Style="{StaticResource TitleText}"/>

                                    <dx:SimpleButton Grid.Row="2" Grid.Column="1" Style="{StaticResource PlayAndPauseButton}"/>

                                    <Slider Grid.Row="2" Grid.Column="2" Minimum="1" Maximum="255" Margin="10 0" IsSnapToTickEnabled="True" Style="{StaticResource CustomSliderStyle}"/>

                                    <Border Grid.Row="2" Grid.Column="3" Style="{StaticResource GeneralBorder}" VerticalAlignment="Stretch">
                                        <TextBlock Style="{StaticResource GeneralTextBlock}">81/144</TextBlock>
                                    </Border>

                                    <!-- Multi-Spot -->
                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Multi-Spot" VerticalAlignment="Center" Style="{StaticResource TitleText}"/>

                                    <dx:SimpleButton Grid.Row="4" Grid.Column="1" Style="{StaticResource PlayAndPauseButton}"/>

                                    <Slider Grid.Row="4" Grid.Column="2" Minimum="1" Maximum="255" Margin="10 0" IsSnapToTickEnabled="True" Style="{StaticResource CustomSliderStyle}"/>

                                    <Border Grid.Row="4" Grid.Column="3" Style="{StaticResource GeneralBorder}" VerticalAlignment="Stretch">
                                        <TextBlock Style="{StaticResource GeneralTextBlock}">5/36</TextBlock>
                                    </Border>

                                    <!-- Time-lapse -->
                                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Time-lapse" VerticalAlignment="Center" Style="{StaticResource TitleText}"/>

                                    <dx:SimpleButton Grid.Row="6" Grid.Column="1" Style="{StaticResource PlayAndPauseButton}"/>

                                    <dxe:TrackBarEdit Grid.Row="6" Grid.Column="2" Margin="15 0" Minimum="1" Maximum="300" SelectionStart="35" SelectionEnd="285" TickPlacement="None">
                                        <dxe:TrackBarEdit.StyleSettings>
                                            <dxe:TrackBarRangeStyleSettings/>
                                        </dxe:TrackBarEdit.StyleSettings>
                                    </dxe:TrackBarEdit>

                                    <Border Grid.Row="6" Grid.Column="3" Style="{StaticResource GeneralBorder}" VerticalAlignment="Stretch">
                                        <TextBlock Style="{StaticResource GeneralTextBlock}">81/121</TextBlock>
                                    </Border>
                                </Grid>

                                <ContentControl Grid.Row="1" Template="{StaticResource HorizontalLine}" Margin="0 12" />

                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <ContentControl Grid.Column="0" prism:RegionManager.RegionName="DisplayControlPanel"/>

                                    <StackPanel Grid.Column="2">
                                        <DockPanel>
                                            <TextBlock Text="Slideshow" VerticalAlignment="Center" Style="{StaticResource TitleText}"/>
                                            <dx:SimpleButton Style="{StaticResource GrayGradientButton}" Content="Record" HorizontalAlignment="Right"/>
                                        </DockPanel>

                                        <DockPanel Margin="0 8 0 0">
                                            <StackPanel Orientation="Horizontal">
                                                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                                    <TextBlock TextAlignment="Center" Text="Speed"/>
                                                    <TextBlock TextAlignment="Center" Text="(FPS)" Margin="0 -4 0 0"/>
                                                </StackPanel>

                                                <dxe:SpinEdit Value="{Binding SlideShowFps}" Width="60" Margin="10 0 0 0"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <TextBlock Text="Repeat" VerticalAlignment="Center"/>
                                                <dxe:SpinEdit Value="{Binding SlideShowRepeat}" Width="60" Margin="10 0 0 0"/>
                                            </StackPanel>
                                        </DockPanel>

                                        <ContentControl Template="{StaticResource HorizontalLine}" Margin="0 12" />

                                        <DockPanel>
                                            <TextBlock Text="Window Arrange" VerticalAlignment="Center"/>

                                            <dxe:ComboBoxEdit SelectedIndex="0" Width="100" HorizontalAlignment="Right">
                                                <dxe:ComboBoxEditItem Content="Horizontal"/>
                                                <dxe:ComboBoxEditItem Content="Vertical"/>
                                            </dxe:ComboBoxEdit>
                                        </DockPanel>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </dxdo:DocumentPanel>
                    </dxdo:DocumentGroup>
                </dxdo:LayoutGroup>

                <dxdo:LayoutGroup Caption="RightGroup" Orientation="Vertical">
                    <dxdo:LayoutPanel ShowCaption="False" AllowClose="False" AllowHide="False" Background="#1F201D" ShowBorder="False">

                    </dxdo:LayoutPanel>

                    <dxdo:LayoutPanel ShowCaption="False" AllowClose="False" AllowHide="False" ItemHeight="50">
                        <StackPanel Orientation="Horizontal" Margin="15 0" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Rotate" VerticalAlignment="Center" FontWeight="Bold"/>

                                <dx:SimpleButton Style="{StaticResource IconButton}" Glyph="../Resources/Images/rotate_right.png" ToolTip="Rotation Right" Margin="20 0 0 0" Command="{Binding RotationCommand}" CommandParameter="Right"/>
                                <dx:SimpleButton Style="{StaticResource IconButton}" Glyph="../Resources/Images/rotate_left.png" ToolTip="Rotation Left" Margin="8 0 0 0" Command="{Binding RotationCommand}" CommandParameter="Left"/>
                                <dx:SimpleButton Style="{StaticResource IconButton}" Glyph="../Resources/Images/reflect_horizontal_left.png" ToolTip="Reflect Horizontal Left" Margin="8 0 0 0" Command="{Binding ReflectCommand}" CommandParameter="HorizontalLeft"/>
                                <dx:SimpleButton Style="{StaticResource IconButton}" Glyph="../Resources/Images/reflect_horizontal_right.png" ToolTip="Reflect Horizontal Right" Margin="8 0 0 0" Command="{Binding ReflectCommand}" CommandParameter="HorizontalRight"/>
                                <dx:SimpleButton Style="{StaticResource IconButton}" Glyph="../Resources/Images/reflect_vertical_top.png" ToolTip="Reflect Vertical Top" Margin="8 0 0 0" Command="{Binding ReflectCommand}" CommandParameter="VerticalTop"/>
                                <dx:SimpleButton Style="{StaticResource IconButton}" Glyph="../Resources/Images/reflect_vertical_bottom.png" ToolTip="Reflect Vertical Bottom" Margin="8 0 0 0" Command="{Binding ReflectCommand}" CommandParameter="VerticalBottom"/>

                                <Button Content="Apply All" Margin="16 0 0 0"/>
                                <Button Content="Reset" Margin="8 0 0 0" Command="{Binding RotationResetCommand}"/>
                            </StackPanel>

                            <ContentControl Template="{StaticResource VerticalLine}" Margin="24 0" />

                            <StackPanel Orientation="Horizontal" Margin="0 0 0 0">
                                <TextBlock Text="Crop" FontWeight="Bold" VerticalAlignment="Center"/>

                                <dx:SimpleButton Style="{StaticResource IconButton}" ToolTip="Crop Rectangle" Padding="0" Margin="20 0 0 0">
                                    <material:PackIcon Kind="CropFree" Width="32" Height="32" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </dx:SimpleButton>
                                <dx:SimpleButton Style="{StaticResource IconButton}" Glyph="../Resources/Images/crop_circle.png" ToolTip="Crop Circle" Margin="8 0 0 0"/>

                                <Button Content="Crop" Margin="16 0 0 0"/>
                                <Button Content="Invert" Margin="8 0 0 0"/>
                                <Button Content="Apply" Margin="8 0 0 0"/>
                                <Button Content="Apply All" Margin="8 0 0 0"/>
                                <Button Content="Reset" Margin="8 0 0 0"/>
                            </StackPanel>
                        </StackPanel>
                    </dxdo:LayoutPanel>

                    <dxdo:LayoutPanel ShowCaption="False" AllowClose="False" AllowHide="False" ItemHeight="150">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="10 0">
                            <Grid x:Name="ImageSequenceGroup">
                                <Grid.RowDefinitions/>
                                <Grid.ColumnDefinitions/>
                            </Grid>
                        </ScrollViewer>
                    </dxdo:LayoutPanel>
                </dxdo:LayoutGroup>
            </dxdo:LayoutGroup>
        </dxdo:DockLayoutManager>
    </Grid>
</dx:ThemedWindow>
