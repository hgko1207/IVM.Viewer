<dx:ThemedWindow x:Class="IVM.Studio.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IVM.Studio"
        mc:Ignorable="d"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        WindowStartupLocation="CenterScreen"
        Title="IVM Studio" Height="900" Width="1600"
        TitleAlignment="Center" Icon="{dx:DXImage SvgImages/Icon Builder/Actions_Image.svg}">
    
    <dxdo:DockLayoutManager ViewStyle="Default">
        <dxdo:LayoutGroup Caption="LayoutRoot" Orientation="Vertical">
            <dxdo:LayoutGroup Caption="LayoutGroup1">
                <dxdo:LayoutGroup Caption="MenuGroup" Orientation="Vertical">
                    <dxdo:LayoutPanel ShowCaption="False" ItemHeight="24" ShowBorder="False">
                        <dxb:MainMenuControl FontSize="14">
                            <dxb:BarSubItem Content=" OpenFolder " Command="{Binding OpenFolderCommand}"/>
                            <dxb:BarSubItem Content=" Refresh " Command="{Binding RefreshCommand}"/>
                            <dxb:BarSubItem Content=" Captrue "/>
                            <dxb:BarSubItem Content=" Export "/>
                            <dxb:BarSubItem Content=" 3D "/>
                        </dxb:MainMenuControl>
                    </dxdo:LayoutPanel>
                        
                    <dxdo:LayoutGroup Caption="GridGroup">
                        <dxdo:LayoutPanel Caption="Information" AllowClose="False" AllowHide="False">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <dxg:GridControl SelectionMode="Row" ShowBorder="True" RenderOptions.EdgeMode="Aliased" Margin="2 0">
                                    <dxg:GridControl.View>
                                        <dxg:TableView AutoWidth="True"/>
                                    </dxg:GridControl.View>

                                    <dxg:GridControl.Columns>
                                        <dxg:GridColumn Header="#" FieldName=""/>
                                        <dxg:GridColumn Header="Category" FieldName="Category"/>
                                        <dxg:GridColumn Header="Filename" FieldName="Filename"/>
                                    </dxg:GridControl.Columns>
                                </dxg:GridControl>

                                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                                    <Button Content="Previous" Width="75"/>
                                    <Button Content="Next" Width="75" Margin="5 0 0 0"/>
                                </StackPanel>
                            </Grid>
                        </dxdo:LayoutPanel>

                        <dxdo:LayoutPanel Caption="Imaging Condition" AllowClose="False" AllowHide="False">
                            <dxg:GridControl SelectionMode="Row" ShowBorder="True" RenderOptions.EdgeMode="Aliased" Margin="2 0 2 2">
                                <dxg:GridControl.View>
                                    <dxg:TableView AutoWidth="True"/>
                                </dxg:GridControl.View>

                                <dxg:GridControl.Bands>
                                    <dxg:GridControlBand Header="">
                                        <dxg:GridColumn FieldName="Seq" Header="#" ReadOnly="True"/>
                                    </dxg:GridControlBand>
                                    <dxg:GridControlBand Header="Laser Power(%)">
                                        <dxg:GridColumn FieldName="Seq" Header="405" ReadOnly="True"/>
                                        <dxg:GridColumn FieldName="Seq" Header="488" ReadOnly="True"/>
                                        <dxg:GridColumn FieldName="Seq" Header="561" ReadOnly="True"/>
                                        <dxg:GridColumn FieldName="Seq" Header="640" ReadOnly="True"/>
                                    </dxg:GridControlBand>
                                    <dxg:GridControlBand Header="Detector Gain">
                                        <dxg:GridColumn FieldName="Seq" Header="DAPI" ReadOnly="True"/>
                                        <dxg:GridColumn FieldName="Seq" Header="GFP" ReadOnly="True"/>
                                        <dxg:GridColumn FieldName="Seq" Header="RFP" ReadOnly="True"/>
                                        <dxg:GridColumn FieldName="Seq" Header="NIR" ReadOnly="True"/>
                                    </dxg:GridControlBand>
                                </dxg:GridControl.Bands>
                            </dxg:GridControl>
                        </dxdo:LayoutPanel>
                    </dxdo:LayoutGroup>
                </dxdo:LayoutGroup>

                <dxdo:LayoutPanel Caption="Image Sequence" ShowCaption="True" AllowClose="False" AllowHide="False" ItemWidth="800">

                </dxdo:LayoutPanel>
            </dxdo:LayoutGroup>

            <dxdo:LayoutPanel Caption="Image" ShowCaption="False" AllowClose="False" AllowHide="False"/>

            <dxdo:LayoutGroup Caption="LayoutGroup2">
                <dxdo:LayoutPanel ShowCaption="False" AllowClose="False">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Margin="15">
                            <TextBlock Text="Rotation" />

                            <StackPanel>
                                
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                                <Button Content="Undo"/>
                                <Button Content="Eodo" Margin="5 0 0 0"/>
                            </StackPanel>
                        </StackPanel>

                        <ContentControl Template="{StaticResource VerticalLine}" Grid.Column="1" Margin="15 15" />

                        <StackPanel Margin="15" Grid.Column="2">
                            <TextBlock Text="Crop" />

                            <StackPanel>

                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                <Button Content="Crop"/>
                                <Button Content="Undo" Margin="5 0 0 0"/>
                            </StackPanel>
                        </StackPanel>

                        <ContentControl Template="{StaticResource VerticalLine}" Grid.Column="3" Margin="15 15" />

                        <StackPanel Margin="15" Grid.Column="4">
                            <TextBlock Text="Pen" />

                            <StackPanel>

                            </StackPanel>
                        </StackPanel>

                        <ContentControl Template="{StaticResource VerticalLine}" Grid.Column="5" Margin="15 15" />

                        <StackPanel Margin="15" Grid.Column="6">
                            <TextBlock Text="Eraser" />

                            <StackPanel>

                            </StackPanel>
                        </StackPanel>

                        <ContentControl Template="{StaticResource VerticalLine}" Grid.Column="7" Margin="15 15" />

                        <StackPanel Margin="15" Grid.Column="8">
                            <TextBlock Text="Text" />

                            <StackPanel>

                            </StackPanel>
                        </StackPanel>

                        <ContentControl Template="{StaticResource VerticalLine}" Grid.Column="9" Margin="15 15" />

                        <StackPanel Margin="15" Grid.Column="10">
                            <TextBlock Text="Image Magnification" />

                            <StackPanel>

                            </StackPanel>
                        </StackPanel>

                        <ContentControl Template="{StaticResource VerticalLine}" Grid.Column="11" Margin="15 15" />

                        <StackPanel Margin="15" Grid.Column="12">
                            <TextBlock Text="Scale Bar" />

                            <StackPanel>

                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                                <Button Content="Preview"/>
                                <Button Content="Apply" Margin="5 0 0 0"/>
                                <Button Content="Undo" Margin="5 0 0 0"/>
                            </StackPanel>
                        </StackPanel>

                        <ContentControl Template="{StaticResource VerticalLine}" Grid.Column="13" Margin="15 15" />

                        <StackPanel Margin="15" Grid.Column="14">
                            <TextBlock Text="Mosaic Magnification" />

                            <StackPanel>

                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </dxdo:LayoutPanel>
            </dxdo:LayoutGroup>
            <dxdo:LayoutGroup Caption="LayoutGroup3">
                <dxdo:LayoutPanel Caption="Image Adjustment" ShowCaption="True" AllowClose="False" AllowHide="False">

                </dxdo:LayoutPanel>

                <dxdo:LayoutPanel Caption="Display Adjustment" ShowCaption="True" AllowClose="False" AllowHide="False">

                </dxdo:LayoutPanel>
            </dxdo:LayoutGroup>
        </dxdo:LayoutGroup>
    </dxdo:DockLayoutManager>
</dx:ThemedWindow>
