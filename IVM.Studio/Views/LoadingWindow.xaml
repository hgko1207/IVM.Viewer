<Window x:Class="IVM.Studio.Views.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IVM.Studio"
        mc:Ignorable="d"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
        xmlns:util="clr-namespace:IVM.Studio.Utils"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        prism:ViewModelLocator.AutoWireViewModel="True"
        WindowStartupLocation="CenterScreen"
        Height="256" Width="256"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent">

    <!--<Window.Background>
        <SolidColorBrush Opacity="1.0" Color="Black"/>
    </Window.Background>-->

    <Grid>
        <Image gif:ImageBehavior.AnimatedSource="..\Resources\Images\loading.gif"
               gif:ImageBehavior.AutoStart="True"
               gif:ImageBehavior.RepeatBehavior="1"/>
    </Grid>
</Window>
