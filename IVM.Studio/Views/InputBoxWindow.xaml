<dx:ThemedWindow x:Class="IVM.Studio.Views.InputBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IVM.Studio.Views"
        mc:Ignorable="d"
        Title="Input Dialog" Height="160" Width="320">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Text :" VerticalAlignment="Center"/>
            <TextBox Name="InputText" Margin="10 0" Width="220"/>
        </DockPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <dx:SimpleButton Style="{StaticResource GrayGradientButton}" Content="OK" Width="75" Click="OkClick"/>
            <dx:SimpleButton Style="{StaticResource GrayGradientButton}" Content="Cancel" Width="75" Margin="5 0 0 0" Click="CloseClick"/>
        </StackPanel>
    </Grid>
</dx:ThemedWindow>
