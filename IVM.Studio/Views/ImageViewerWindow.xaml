<dx:ThemedWindow x:Class="IVM.Studio.Views.ImageViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IVM.Studio.Views"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="600" Width="600" Left="750" Top="100">
    
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" UseLayoutRounding="True">
        <Grid>
            <Image Panel.ZIndex="1" Source="{Binding DisplayImage}" RenderOptions.BitmapScalingMode="HighQuality">
            </Image>

            <Canvas Panel.ZIndex="0" x:Name="ImageOverlayCanvas" Background="Transparent">
            </Canvas>
        </Grid>
    </ScrollViewer>
</dx:ThemedWindow>
