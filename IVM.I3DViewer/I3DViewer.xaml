<UserControl x:Class="IVM.Studio.I3D.I3DViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sharpGL="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="512" d:DesignWidth="512">
    <Grid Background="Gray">
        <sharpGL:OpenGLControl
            x:Name="RenderTarget"
            OpenGLDraw="OpenGLControl_Draw" 
            OpenGLInitialized="OpenGLControl_Initialized"
            Resized="OpenGLControl_Resized"
            RenderContextType="FBO"
            RenderTrigger="Manual"/>
        <TextBlock x:Name="Loading" Text="LOADING" Foreground="White" Background="Black" FontSize="48" 
                   VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Hidden"/>
        <TextBlock x:Name="Invalid" Text="INVALID DATA" Foreground="Red" Background="Black" FontSize="48" 
                   VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Hidden"/>
    </Grid>    
</UserControl>
