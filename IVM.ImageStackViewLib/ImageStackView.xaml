<UserControl x:Class="ivm.ImageStackView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ivm"
             xmlns:sharpGL="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="512" d:DesignWidth="512">
    <Grid Background="Gray">
        <sharpGL:OpenGLControl
            x:Name="RenderTarget"
            OpenGLDraw="OpenGLControl_Draw" 
            OpenGLInitialized="OpenGLControl_Initialized"
            Resized="OpenGLControl_Resized"
            RenderContextType="FBO"
            RenderTrigger="Manual"/>
    </Grid>
</UserControl>
