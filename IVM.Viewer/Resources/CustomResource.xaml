<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                    xmlns:local="clr-namespace:IVM.Viewer.Resources">

    <Style TargetType="{x:Type dx:ThemedWindowTitle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type dx:ThemedWindowTitle}">
                    <TextBlock x:Name="TitleText"  
                           Margin="0,2"
                           HorizontalAlignment="Center"  
                           FontSize="16"  
                           FontWeight="Bold"  
                           Foreground="#FFFFFF"  
                           Text="{TemplateBinding Content}"
                           TextTrimming="WordEllipsis" />

                    <ControlTemplate.Triggers>
                        <DataTrigger Value="Ribbon"  
                                 Binding="{Binding Path=ActualWindowKind, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type dx:ThemedWindow}}}">
                            <Setter TargetName="TitleText" Property="Foreground" Value="#FFFFFF" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>